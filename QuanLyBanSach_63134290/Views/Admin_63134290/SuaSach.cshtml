
@model QuanLyBanSach_63134290.Models.SACH

@{
    ViewBag.Title = "SuaSach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h2 align="center">Chỉnh Sửa Sách</h2>


<div class=" align-items-center justify-content-between border-bottom" , style="padding-top: 50px;">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaSach)

            <div class="form-group">
                @Html.LabelFor(model => model.MaSach, "Mã Sách", htmlAttributes: new { @class = "control-label col-md-2" })

                <div class="col-md-10">
                    <div> @Model.MaSach </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TenSach, "Tên Sách", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TenSach, new { htmlAttributes = new { @class = "form-control", style = "width: 50%;" } })
                    @Html.ValidationMessageFor(model => model.TenSach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MoTa, "Mô Tả", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control", style = "width: 50%;" } })
                    @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiaSach, "Giá Sách", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiaSach, new { htmlAttributes = new { @class = "form-control", style = "width: 50%;" } })
                    @Html.ValidationMessageFor(model => model.GiaSach, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AnhBiaSach, "Ảnh bìa Sách", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    Chọn ảnh mới
                    <input type="file" name="fileUpload" />
                    <img src="@Url.Content("~/images/" + Model.AnhBiaSach)" width="120px" />
                    @ViewBag.Thongbao
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SoLuongTon, "Số Lượng Tồn", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SoLuongTon, new { htmlAttributes = new { @class = "form-control", style = "width: 50%;" } })
                    @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NgayCapNhat, "Ngày Cập Nhật", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="date" name="NgayCapNhat" />
                    @Html.ValidationMessageFor(model => model.NgayCapNhat, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MaChuDe, "Mã Chủ Đề", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("MaChuDe")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Quay lại", "Sach")
    </div>
</div>



